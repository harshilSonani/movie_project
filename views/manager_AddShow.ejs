<%- include('managerHeader') %>

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Movie Form</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item">Movie</li>
        <li class="breadcrumb-item active">Add Movie</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->
  <section class="section">
    <div class="row">

      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Vertical Form</h5>

            <!-- Vertical Form -->
            <form class="row g-3" method="post" action="/manager/insertMovieshow">
                <input type="hidden" name="movieid" value="<%= movieId.id %>">
              <div class="col-6">
                <label for="inputNanme4" class="form-label">Movie theater</label>
                <select class="form-control" id="inputNanme4" name="theaterid">
                    <option value="">-- select theater --</option>
                    <% for(var d of data){ %>
                        <option value="<%= d.id %>"><%= d.theater %></option>
                    <% } %>
                </select>
              </div>
              <div class="col-6">
                <label for="inputNanme4" class="form-label">Show Date</label>
                <input type="date" class="form-control" id="inputNanme4" name="date">
              </div>
              <div class="col-6">
                <label for="inputNanme4" class="form-label">Show Time</label>
                <input type="time" class="form-control" id="inputNanme4" name="time">
              </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </form><!-- Vertical Form -->

          </div>
        </div>


      </div>
    </div>
  </section>

</main><!-- End #main -->

  <%- include('footer') %>