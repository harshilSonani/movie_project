<%- include('managerHeader') %>

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Movie Form</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item">Movie</li>
        <li class="breadcrumb-item active">Add Movie</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->
  <section class="section">
    <div class="row">

      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Vertical Form</h5>

            <!-- Vertical Form -->
            <form class="row g-3" method="post" action="/manager/insertTheater" enctype="multipart/form-data">
              <div class="col-6">
                <label for="inputNanme4" class="form-label">Theater Nmae</label>
                <input type="text" class="form-control" id="inputNanme4" name="theater">
              </div>
              <div class="col-6">
                <label for="inputEmail4" class="form-label">Theater Address</label>
                <input type="text" class="form-control" id="inputEmail4" name="address">
              </div>
              <div class="col-6">
                <label for="inputEmail4" class="form-label">Theater Image</label>
                <input type="text" class="form-control" id="inputEmail4" name="city">
              </div>
              <div class="col-6">
                <label for="inputEmail4" class="form-label">Theater Image</label>
                <input type="file" class="form-control" id="inputEmail4" name="img">
              </div>
              <div class="col-6">
                <label for="inputEmail4" class="form-label">How Manay Row</label>
                <input type="text" class="form-control" id="inputEmail4" name="row">
              </div>
              <div class="col-6">
                <label for="inputEmail4" class="form-label">How Many Seat</label>
                <input type="seat" class="form-control" id="inputEmail4" name="seat">
              </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </form><!-- Vertical Form -->

          </div>
        </div>


      </div>
    </div>
  </section>

</main><!-- End #main -->

  <%- include('footer') %>